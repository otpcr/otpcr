#!/usr/bin/env python3
# This file is placed in the Public Domain.


"service"


import getpass
import os
import sys


from otpcr.config  import Config
from otpcr.command import parse, scanner
from otpcr.main    import forever, modnames, pidfile, privileges, wrap
from otpcr.modules import face
from otpcr.runtime import errors


cfg = Config()


def main():
    "main"
    modstr = ",".join(modnames(face))
    privileges(getpass.getuser())
    pidfile(cfg.pidfile)
    for mod, thr in init(modstr, face, MODS):
        if "v" in cfg.opts:
            mod.VERBOSE = print
        if "w" in cfg.opts:
            thr.join()
    forever()


if __name__ == "__main__":
    wrap(main, print)
    errors(print)
